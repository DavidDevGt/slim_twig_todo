<!DOCTYPE html>
<html>
	<head>
		<title>Lista de Tareas</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
		<style>
			body {
				font-family: 'Roboto', sans-serif;
			}
		</style>
	</head>
	<body>
		<div class="container mt-4">
			<h1 class="mb-5 text-success">Lista de Tareas</h1>

			<form action="/tareas" method="post" class="mb-3">
				<div class="input-group">
					<input type="text" name="tarea" class="form-control" placeholder="Añadir nueva tarea">
					<button type="submit" class="btn btn-success">
						<i class="fas fa-plus"></i>
						Añadir</button>
				</div>
			</form>

			<ul class="list-group">
				{% for tarea in tareas %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<form action="/tareas/editar/{{ loop.index0 }}" method="post" class="form-inline">
							<input type="text" name="tarea" class="form-control-plaintext tarea-editable" value="{{ tarea }}" readonly>
							<button type="button" class="btn btn-info btn-sm mx-1 editar-tarea">
								<i class="fas fa-pencil-alt"></i>
							</button>
							<button type="submit" class="btn btn-success btn-sm mx-1 guardar-tarea" style="display:none;">
								<i class="fas fa-save"></i>
							</button>
						</form>
						<form action="/tareas/{{ loop.index0 }}" method="post">
							<button type="submit" class="btn btn-danger btn-sm">
								<i class="fas fa-trash"></i>
							</button>
						</form>
					</li>
				{% endfor %}
			</ul>
		</div>
		<script>
			document.querySelectorAll('.editar-tarea').forEach(function (btn) {
            btn.addEventListener('click', function () {
            let tarea = this.parentNode.querySelector('.tarea-editable');
            tarea.readOnly = false;
            tarea.classList.remove('form-control-plaintext');
            tarea.classList.add('form-control');
            this.style.display = 'none';
            this.nextElementSibling.style.display = 'inline-block';
            });
            });
		</script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
